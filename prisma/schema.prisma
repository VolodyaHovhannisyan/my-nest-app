generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  imageUrl  String? // ðŸ‘ˆ Add this line (optional field)
  createdAt DateTime @default(now())
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  refreshToken String? // Make sure refreshToken exists (it's marked optional with '?')
}

enum Role {
  USER
  ADMIN
}
